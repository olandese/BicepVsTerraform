            "  properties: {}",
            "}",
            ""
        ]
    },
    "1.3-storage": {
        "prefix": "1.3-storage",
        "body": [
            "module storage_module '../modules/storage.bicep' = {",
            "  name: 'storageDeployment-\\${now}'",
            "  scope: bicepResourceGroup_resource",
            "  params: {",
            "\tstorageName: storageName",
            "\tlocation: bicepResourceGroup_resource.location",
            "  }",
            "}"
        ]
    },
